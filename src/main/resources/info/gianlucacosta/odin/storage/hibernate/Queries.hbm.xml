<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <query name="info.gianlucacosta.balmung.readLemmas">
        <![CDATA[
        SELECT lemma
        FROM Lemma lemma
        ]]>
    </query>

    <query name="info.gianlucacosta.balmung.readNouns">
        <![CDATA[
        SELECT noun
        FROM Noun noun
        ]]>
    </query>

    <query name="info.gianlucacosta.balmung.readVerbs">
        <![CDATA[
        SELECT verb
        FROM Verb verb
        ]]>
    </query>

    <query name="info.gianlucacosta.balmung.readAdjectives">
        <![CDATA[
        SELECT adjective
        FROM Adjective adjective
        ]]>
    </query>
</hibernate-mapping>